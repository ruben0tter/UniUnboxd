<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Bottom border -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <stroke android:width="0dp" android:color="@android:color/transparent" />
            <padding android:bottom="2dp" android:top="0dp" android:right="0dp" android:left="0dp" />
        </shape>
    </item>
    <item android:top="-5dp" android:right="-5dp" android:left="-5dp" android:bottom="0dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <stroke android:width="1dp" android:color="#000000" />
        </shape>
    </item>
</layer-list>
